{% extends "_base.njk" %}

{% block title %}{% endblock %}

{% block content %}

<h2>{{ title }}</h2>
<div class="canvas-contain">
<canvas id="hexmap" class="canvas" width="800" height="600"></canvas>
<canvas id="hexmap2" class="canvas2" width="800" height="600"></canvas>
</div>
<div class="chat container-fluid">
   <div class="row">
     <div class="col-xs-10">
       <div id="messages"></div>
     </div>
     <div class="col-xs-2">
       <form class="chat-box" action="javascript:void(0)" id="roll-dice-form">
         <button class="btn" type="send" name="roll-dice" id="roll-dice">Roll</button>
       </form>
       <data value="" id="myName"></data>
     </div>
   </div>
   <div id="typing"></div>
  <form action="javascript:void(0)" id="chatForm">
    <input id="m" autocomplete="off" /><button>Send</button>
  </form>
</div>
 <!-- Modal -->
 <div class="modal fade" id="myModal">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <h4 class="modal-title">Welcome to the chat room! What's your name?</h4>
       </div>
       <div class="modal-body">
         <form action="javascript:void(0)" id="nameForm">
           <input id="username" class="form-control" autocomplete="off" autofocus>
           <button type="submit" class="btn btn-primary">Ok!</button>
         </form>
       </div>
     </div>
   </div>
 </div>

{% endblock %}

{% block css %}
<link rel="stylesheet" href="/css/play.css" />
{% endblock %}

{% block scripts %}
<script src="//cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.5/socket.io.js" charset="utf-8"></script>
<!-- <script src="/socket.io/socket.io.js"></script> -->
<script type="text/javascript" src="/js/play.js"></script>
<script type="text/javascript" src="/js/playmore.js"></script>
<script type="text/javascript" src="/js/utility.js"></script>
<script type="text/javascript" src="/js/chat.js"></script>
<script type="text/javascript" src="/js/buttons.js"></script>
{% endblock %}
